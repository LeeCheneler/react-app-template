{
  "env": {
    "browser": true,
    "jest": true
  },
  "extends": "airbnb",
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "rules": {
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "linebreak-style": ["off"],
    "comma-dangle": ["off"],
    "arrow-body-style": ["off"],
    "max-len": ["error", 125]
  },
  "settings": {
    "import/resolver": "webpack"
  }
}
